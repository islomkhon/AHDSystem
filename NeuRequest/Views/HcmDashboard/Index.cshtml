<div class="modal fade" id="exampleModal-4" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel-4" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel-4">New HCM Request</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form>
                    <div class="form-group row">
                        <label class="col-sm-3 col-form-label">Request Category</label>
                        <div class="col-sm-9">
                            <select id="hcmRequestDepartment" name="hcmRequestDepartment" class="form-control">
                                <optgroup label="Leaves and Holydays">
                                    <option value="LeaveCancelation" data-target="/HcmDashboard/LeaveCancelation">Leave Cancelation</option>
                                    <option value="LeavePastApply" data-target="/HcmDashboard/LeavePastApply">Past Leave Apply</option>
                                    <option value="LeaveWFHApply" data-target="/HcmDashboard/LeaveWFHApply">Work From Home</option>
                                    <option value="LeaveBalanceEnquiry" data-target="/HcmDashboard/LeaveBalanceEnquiry">Leave Balance Enquiry</option>
                                </optgroup>
                                <optgroup label="Letter">
                                    <option value="AddressProof" data-target="/HcmDashboard/AddressProof">Address Proof</option>
                                    <option value="EmployeeVerificationReq" data-target="/HcmDashboard/EmployeeVerificationReq">Employee Verification</option>
                                    <option value="SalaryCertificate" data-target="/HcmDashboard/SalaryCertificate">Salary Certificate</option>
                                </optgroup>
                                <optgroup label="Travel">
                                    <option value="DomesticTripRequest" data-target="/HcmDashboard/DomesticTripRequest">Domestic</option>
                                    <option value="InternationalTripRequest" data-target="/HcmDashboard/InternationalTripRequest">International</option>
                                </optgroup>
                                <optgroup label="Database">
                                    <option value="DBManagerChangeRequest" data-target="/HcmDashboard/DBManagerChangeRequest">Manager Change</option>
                                    <option value="DBLocationChangeRequest" data-target="/HcmDashboard/DBLocationChangeRequest">Location change</option>
                                </optgroup>
                                <optgroup label="General">
                                    <option value="GeneralRequest" data-target="/HcmDashboard/GeneralRequest">Other</option>
                                </optgroup>
                            </select>
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-success hcm_create_Request">Create Request</button>
                <button type="button" class="btn btn-light" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>


