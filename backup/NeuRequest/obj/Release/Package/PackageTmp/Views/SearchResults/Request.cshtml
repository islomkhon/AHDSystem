@using NeuRequest;
@using NeuRequest.Models;

@{
    UserProfile currentUser = ViewData["UserProfileSession"] as UserProfile;
    string query = ViewData["query"] as string;
    List<RequestSearchRender> requestSearchRenders = ViewData["SearchResultObject"] as List<RequestSearchRender>;
    string searchResults = ViewData["SearchResultStr"] as string;
    string statusRowString = "";
    string requestTypeString = "";

    ViewBag.Title = "Search Result ";
}
<style>
</style>
<nav class="inline-breadcrumb" aria-label="breadcrumb">
    <ol class="breadcrumb bg-dark">
        <li class="breadcrumb-item"><a href="/Home/Index">Home</a></li>
        <li class="breadcrumb-item active" aria-current="page">Search Result</li>
    </ol>
</nav>

<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-body">
                <div class="row search-result">
                    <div class="col-12">
                        <form action="/SearchResults/Request" method="get" enctype="multipart/form-data">
                            <div class="form-group d-flex">
                                <input type="text" autocomplete="off" name="q" class="form-control" value="@query" placeholder="Search Here">
                                <button type="submit" class="btn btn-primary ml-3">Search</button>
                            </div>
                        </form>
                    </div>
                    <div class="col-12 mb-5">
                        <h2>Search Result For<u class="ml-2">"@query"</u></h2>
                        <p class="text-muted">About @requestSearchRenders.Count results</p>
                    </div>
                    @Html.Raw(@searchResults)

                </div>
            </div>
        </div>
    </div>
</div>

@Scripts.Render("~/Rebone/js")
@Scripts.Render("~/Rebone/public/js/tooltips.js")
<script>
    $(function () {

        
    });
</script>
