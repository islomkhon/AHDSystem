@using AHD;
@using AHD.Models;
@{
    NueUserProfile userProfileSession = ViewData["NueUserProfile"] as NueUserProfile;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>@ViewBag.Title AHD</title>
    @Styles.Render("~/Rebone/css")
    <link rel="shortcut icon" href="~/Rebone/public/images/favicon.png" />
    <style>
        .main-panel {
            width: 100%;
        }
        .hide{
            display : none !important;
        }
        .inline-user-profile-thump {
            text-align: left;
            font-family: "Nunito Sans",sans-serif;
            font-size: .875rem;
            font-weight: 400;
            line-height: 1.5;
            background-color: #eef5f9;
            margin: 0;
            overflow-x: hidden;
            color: #3e5569;
            background: #fff;
        }
        @@media (min-width: 576px){
            .inline-user-profile-thump {
                column-count: 3;
                column-gap: 1.25rem;
                orphans: 1;
                widows: 1;
            }
        }
        .inline-user-profile-thump .card {
            position: relative;
            display: flex;
            flex-direction: column;
            min-width: 0;
            word-wrap: break-word;
            background-color: #fff;
            background-clip: border-box;
            border: 0 solid transparent;
            border-radius: 0;
        }
        .inline-user-profile-thump .card {
            margin-bottom: 20px;
        }
       @@media (min-width: 576px){
        .inline-user-profile-thump .card {
            display: inline-block;
            width: 100%;
        }
       }
        .inline-user-profile-thump .card {
            margin-bottom: .75rem;
        }
        .inline-user-profile-thump .card-body {
            flex: 1 1 auto;
            padding: 1.25rem;
        }
        .inline-user-profile-thump .text-center {
            text-align: center !important;
        }
        .inline-user-profile-thump .m-t-20 {
            margin-top: 20px;
        }
        .inline-user-profile-thump .m-b-20 {
            margin-bottom: 20px;
        }
        .inline-user-profile-thump .fa-stack, .inline-user-profile-thump img, .inline-user-profile-thump svg {
            vertical-align: middle;
        }
        .inline-user-profile-thump img {
            border-style: none;
        }
        .inline-user-profile-thump .rounded-circle {
            border-radius: 50% !important;
        }
        .inline-user-profile-thump .text-center {
            text-align: center !important;
        }
        .inline-user-profile-thump dl, .inline-user-profile-thump h1, .inline-user-profile-thump h2,
        .inline-user-profile-thump h3, .inline-user-profile-thump h4, .inline-user-profile-thump h5,
        .inline-user-profile-thump h6, .inline-user-profile-thump ol, .inline-user-profile-thump p,
        .inline-user-profile-thump pre, .inline-user-profile-thump ul {
            margin-top: 0;
        }
        .inline-user-profile-thump dd, .inline-user-profile-thump h1, .inline-user-profile-thump h2,
        .inline-user-profile-thump h3, .inline-user-profile-thump h4, .inline-user-profile-thump h5,
        .inline-user-profile-thump h6, .inline-user-profile-thump label {
            margin-bottom: .5rem;
        }
        .inline-user-profile-thump .h1, .inline-user-profile-thump .h2, .inline-user-profile-thump .h3,
        .inline-user-profile-thump .h4, .inline-user-profile-thump .h5, .inline-user-profile-thump .h6,
        .inline-user-profile-thump h1, .inline-user-profile-thump h2, .inline-user-profile-thump h3,
        .inline-user-profile-thump h4, .inline-user-profile-thump h5, .inline-user-profile-thump h6 {
            margin-bottom: .5rem;
            font-weight: 700;
            line-height: 1.2;
            color: inherit;
        }
        .inline-user-profile-thump .h4, .inline-user-profile-thump h4 {
            font-size: 1.125rem;
        }
        .inline-user-profile-thump .m-t-20 {
            margin-top: 20px;
        }
        .inline-user-profile-thump .m-b-0 {
            margin-bottom: 0;
        }

        .request-summary-container {
            text-align: left;
            font-family: "Nunito Sans",sans-serif;
            font-size: .875rem;
            font-weight: 400;
            line-height: 1.5;
            background-color: #eef5f9;
            margin: 0;
            overflow-x: hidden;
            color: #3e5569;
            background: #fff;
            padding: 0.1rem
        }

            .request-summary-container .card {
                position: relative;
                display: flex;
                flex-direction: column;
                min-width: 0;
                word-wrap: break-word;
                background-color: #fff;
                background-clip: border-box;
                border: 0 solid transparent;
                border-radius: 0;
            }

            .request-summary-container .card {
                box-shadow: 0 1px 0px rgba(0,0,0,0.12), 0 1px 1px rgba(0,0,0,0.24);
                transition: all 0.3s cubic-bezier(.25,.8,.25,1);
            }

            .request-summary-container .card-body {
                flex: 1 1 auto;
                padding: 1.25rem;
            }

            .request-summary-container .border-bottom {
                border-bottom: 1px solid #e9ecef !important;
            }

            .request-summary-container dl, .request-summary-container h1, .request-summary-container h2,
            .request-summary-container h3, .request-summary-container h4, .request-summary-container h5,
            .request-summary-container h6, .request-summary-container ol, .request-summary-container p,
            .request-summary-container pre, .request-summary-container ul {
                margin-top: 0;
            }

            .request-summary-container dd, .request-summary-container h1, .request-summary-container h2,
            .request-summary-container h3, .request-summary-container h4, .request-summary-container h5, .request-summary-container h6, .request-summary-container label {
                margin-bottom: .5rem;
            }

            .request-summary-container .h1, .request-summary-container .h2, .request-summary-container .h3, .request-summary-container .h4,
            .request-summary-container .h5, .request-summary-container .h6, .request-summary-container h1,
            .request-summary-container h2, .request-summary-container h3, .request-summary-container h4, .request-summary-container h5,
            .request-summary-container h6 {
                margin-bottom: .5rem;
                font-weight: 700;
                line-height: 1.2;
                color: inherit;
            }

            .request-summary-container .h4, .request-summary-container h4 {
                font-size: 1.125rem;
            }

            .request-summary-container .card-title {
                margin-bottom: .75rem;
            }

            .request-summary-container .card .card-title {
                position: relative;
                font-weight: 600;
                margin-bottom: 10px;
            }

            .request-summary-container .card-header, .request-summary-container .card-subtitle, .request-summary-container .card-text:last-child {
                margin-bottom: 0;
            }

            .request-summary-container .card-subtitle {
                margin-top: -.375rem;
            }

            .request-summary-container .card .card-subtitle {
                font-weight: 300;
                margin-bottom: 10px;
                color: #a1aab2;
            }

            .request-summary-container .card-body {
                flex: 1 1 auto;
                padding: 1.25rem;
            }
            .request-summary-container .m-t-10 {
                margin-top: 10px;
            }
            .request-summary-container .d-flex {
                display: flex !important;
            }
            .request-summary-container .align-items-center {
                align-items: center !important;
            }
            .request-summary-container .m-r-10 {
                margin-right: 10px;
            }
        .request-summary-container .display-5 {
            font-size: 3rem;
        }
        .request-summary-container .text-muted {
            color: #a1aab2 !important;
        }
        .request-summary-container .h3, .request-summary-container h3 {
            font-size: 1.5rem;
        }
        .request-summary-container .font-medium {
            font-weight: 500;
        }
        .request-summary-container .m-b-0 {
            margin-bottom: 0;
        }
        .text-primary {
            color: #7460ee !important;
        }
        .text-orange {
            color: #fb8c00 !important;
        }
        .text-green {
            color: #00ce68;
        }
        .text-blue {
            color: #40c4ff;
        }
        .text-deep-blue {
            color: #2962FF;
        }
        .inline-breadcrumb, .inline-breadcrumb .breadcrumb {
            margin-bottom: 0;
        }
    </style>
</head>
<body>
    <div class="container-scroller">
        <!-- partial:../../partials/_navbar.html -->
        <nav class="navbar default-layout col-lg-12 col-12 p-0 fixed-top d-flex flex-row">
            <div class="text-center navbar-brand-wrapper d-flex align-items-top justify-content-center">
                <a class="navbar-brand brand-logo" href="/Home/Index"><img src="~/Rebone/public/images/logo.png" alt="logo" /></a>
                <a class="navbar-brand brand-logo-mini" href="/Home/Index"><img src="~/Rebone/public/images/favicon.png" alt="logo" /></a>
            </div>
            <div class="navbar-menu-wrapper d-flex align-items-center">
                <button class="navbar-toggler navbar-toggler align-self-center" type="button" data-toggle="minimize">
                    <span class="mdi mdi-menu"></span>
                </button>
                <ul class="navbar-nav navbar-nav-left header-links d-none d-md-flex"></ul>
                <ul class="navbar-nav navbar-nav-right">
                    <li class="nav-item dropdown d-none d-xl-inline-block">
                        <a class="nav-link dropdown-toggle" id="UserDropdown" href="#" data-toggle="dropdown" aria-expanded="false">
                            <span class="profile-text">Hello, @userProfileSession.fullName !</span><img class="img-xs rounded-circle" src="~/Rebone/public/images/faces-clipart/pic-1.png" alt="Profile image">
                        </a>
                        <div class="dropdown-menu dropdown-menu-right navbar-dropdown" aria-labelledby="UserDropdown">
                            <a class="dropdown-item p-0">
                                <div class="d-flex border-bottom">
                                    <div class="py-3 px-4 d-flex align-items-center justify-content-center"><i class="mdi mdi-bookmark-plus-outline mr-0 text-gray"></i></div>
                                    <div class="py-3 px-4 d-flex align-items-center justify-content-center border-left border-right"><i class="mdi mdi-account-outline mr-0 text-gray"></i></div>
                                    <div class="py-3 px-4 d-flex align-items-center justify-content-center"><i class="mdi mdi-alarm-check mr-0 text-gray"></i></div>
                                </div>
                            </a>
                            <a class="dropdown-item mt-2">
                                Switch Accounts
                            </a>
                            <a class="dropdown-item" href="/Home/Logout">
                                Sign Out
                            </a>
                        </div>
                    </li>
                </ul>
                <button class="navbar-toggler navbar-toggler-right d-lg-none align-self-center" type="button" data-toggle="offcanvas">
                    <span class="icon-menu"></span>
                </button>
            </div>
        </nav>

        <!-- partial -->
        <div class="container-fluid page-body-wrapper">
            <!-- partial:../../partials/_sidebar.html -->
            <nav class="sidebar sidebar-offcanvas" id="sidebar">
                <ul class="nav">
                    <li class="nav-item nav-profile">

                        <div class="nav-link inline-user-profile-thump">
                            <div class="card">
                                <div class="card-body text-center">
                                    <div class="profile-pic m-b-20 m-t-20">
                                        <img src="~/Rebone/public/images/faces-clipart/pic-1.png" width="110" class="rounded-circle" alt="user">
                                        <h4 class="m-t-20 m-b-0">@userProfileSession.fullName</h4>
                                        <div>
                                            <small class="designation text-muted">@userProfileSession.designation</small>
                                            <span class="status-indicator online"></span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                            
                        <div class="nav-link hide">
                                <div class="user-wrapper">
                                    <div class="profile-image">
                                        <img src="~/Rebone/public/images/faces-clipart/pic-1.png" alt="profile image">
                                    </div>
                                    <div class="text-wrapper">
                                        <p class="profile-name">@userProfileSession.fullName</p>
                                        <div>
                                            <small class="designation text-muted">@userProfileSession.designation</small>
                                            <span class="status-indicator online"></span>
                                        </div>
                                    </div>
                                </div>
                                <button class="btn btn-success btn-block" data-toggle="modal" data-target="#exampleModal">New Goal<i class="mdi mdi-plus"></i></button>
                        </div>

                    </li>
                    <li class="nav-item hide"> <a class="nav-link" href="../documentation.html"> <i class="menu-icon mdi mdi-scale-bathroom"></i><span class="menu-title">Documentation</span> </a> </li>
                </ul>
            </nav>

            <!-- partial -->
            <div class="main-panel">
                <div class="content-wrapper">
                    <div class="row">
                        <div class="col-12 grid-margin">
                            @RenderBody()
                        </div>
                    </div>
                </div>
                <!-- content-wrapper ends -->
                <!-- partial:../../partials/_footer.html -->
                <footer class="footer">
                    <div class="container-fluid clearfix">

                    </div>
                </footer>
                <!-- partial -->
            </div>
            <!-- main-panel ends -->
        </div>
        <!-- page-body-wrapper ends -->
    </div>
    <!-- container-scroller -->
    <!-- plugins:js -->
    <!-- End custom js for this page-->
    <script>
        $(function () {
            $(document).on('click', '.link-action-tigger', function (e) {
                window.location = $(this).data('target');
            });
        });
    </script>
</body>
</html>
