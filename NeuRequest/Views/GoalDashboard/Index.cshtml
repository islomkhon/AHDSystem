                                    <optgroup label="Personal Goals">
                                        <option value="DomesticTripRequest" data-target="/HcmDashboard/DomesticTripRequest">Domestic</option>
                                        <option value="InternationalTripRequest" data-target="/HcmDashboard/InternationalTripRequest">International</option>
                                    </optgroup>
                                </select>
                            </div>


                        </fieldset>
                    </form>

                </div>

                <div class="d-block text-right card-footer">
                    <button class="mr-2 btn btn-link btn-sm" data-dismiss="modal">Cancel</button>
                    <button class="btn btn-success btn-sm hcm_create_Request">Create</button>
                </div>

            </div>

        </div>
    </div>
</div>


@Scripts.Render("~/Rebone/js")
@Scripts.Render("~/Rebone/public/js/tooltips.js")
@Scripts.Render("~/Rebone/public/vendors/datatable/dataTables.buttons.min.js")
@Scripts.Render("~/Rebone/public/vendors/datatable/buttons.flash.min.js")
@Scripts.Render("~/Rebone/public/vendors/datatable/jszip.min.js")
@Scripts.Render("~/Rebone/public/vendors/datatable/pdfmake.min.js")
@Scripts.Render("~/Rebone/public/vendors/datatable/vfs_fonts.js")
@Scripts.Render("~/Rebone/public/vendors/datatable/buttons.html5.min.js")
@Scripts.Render("~/Rebone/public/vendors/datatable/buttons.print.min.js")

<script>



    $(function () {
        


        if ($(".select2").length) {
            $(".select2").select2({
                dropdownParent: $('#exampleModal-4')
            });
        }

        $(document).on('click', '.hcm_create_Request', function (e) {
            var target = $('#hcmRequestDepartment').find('option:selected', this).data('target');
            window.location = target;
        });

        $('#request-summary-listing').DataTable({
            dom: 'Bfrtip',
            buttons: [
                'copy', 'csv', 'excel', 'pdf', 'print'
            ],
            "search": {
                "regex": true,
            },
            "aLengthMenu": [
                [5, 10, 15, 20, 50, 100],
                [5, 10, 15, 20, 50, 100]
            ],
            "iDisplayLength": 10,
            "language": {
                search: ""
            }
        });
        $('#request-summary-listing').each(function () {
            var datatable = $(this);
            // SEARCH - Add the placeholder for Search and Turn this into in-line form control
            var search_input = datatable.closest('.dataTables_wrapper').find('div[id$=_filter] input');
            search_input.attr('placeholder', 'Search');
            search_input.removeClass('form-control-sm');
            // LENGTH - Inline-Form control
            var length_sel = datatable.closest('.dataTables_wrapper').find('div[id$=_length] select');
            length_sel.removeClass('form-control-sm');
        });

        if ($(".dt-buttons").length) {

            $(".dt-buttons").appendTo("#request-summary-listing_filter");
        }

    });
</script>
