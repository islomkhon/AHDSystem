    <script>
        $(function () {

            $(document).on('click', '.hcm_create_Request', function (e) {
                var target = $('#hcmRequestDepartment').find('option:selected', this).data('target');
                window.location = target;
            });

            if ($(".mail-tigger").length) {
                $(document).on('click', '.mail-tigger', function (e) {
                    var target = $(this).data('target');
                    var id = $(this).data('id');

                    $('#Direct_Mail_Request_Recipient').val(target + ";");
                    $('#Direct_Mail_Request_Comment').val('');

                    $('#directMessageModel').modal('show');

                });
            }

            $(document).on('click', '.directMessageModel_trigger', function (e) {
                var formData = new FormData();
                formData.append("Direct_Mail_Request_Id", "" + $('#Direct_Mail_Request_Id').val() + "");
                formData.append("Direct_Mail_Request_Recipient", "" + $('#Direct_Mail_Request_Recipient').val() + "");
                formData.append("Direct_Mail_Request_Comment", $('#Direct_Mail_Request_Comment').val());
                $.ajax({
                    type: "POST",
                    dataType: 'json',
                    enctype: 'multipart/form-data',
                    url: "/HcmDashboard/DirectMail",
                    data: formData,
                    processData: false,
                    contentType: false,
                    cache: false,
                    timeout: 600000,
                    success: function (data) {
                        if (data.status == 'Ok') {
                            $.toast({
                                heading: '...',
                                text: data.message,
                                showHideTransition: 'slide',
                                icon: 'info',
                                loaderBg: '#46c35f',
                                position: 'top-right'
                            });
                            $('#directMessageModel').modal('hide');
                        }
                        else {
                            $.toast({
                                heading: '...',
                                text: data.message,
                                showHideTransition: 'slide',
                                icon: 'info',
                                loaderBg: '#46c35f',
                                position: 'top-right'
                            });
                        }
                    },
                    error: function (e) {
                        console.log("ERROR : ", e);
                    }
                });

            });

